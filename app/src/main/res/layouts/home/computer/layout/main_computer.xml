<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTitleBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <com.zykj.onexiubrother.widget.MyTitleBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="#ffffff"
        android:id="@+id/title"
        MyTitleBar:LiftBackground="@mipmap/retreat"
        MyTitleBar:TitleText="电脑维修"
        MyTitleBar:TitleTextColor="#00cccc"
        MyTitleBar:TitleTextSize="10sp"></com.zykj.onexiubrother.widget.MyTitleBar>

    <include
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/diannao_ll_pinpai"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="品牌"
            android:textSize="20dp"
            android:textColor="#6b6b6b"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/line_shu"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.78"
            android:hint="请选择您的电脑品牌"
            android:layout_marginLeft="20dp"
            android:id="@+id/diannao_tv_pinpai"
            android:gravity="center_vertical"
            android:textSize="19sp"
            android:textColorHint="#c9c9c9"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/fanhui"
            android:layout_marginLeft="20dp"
            android:paddingRight="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:id="@+id/diannao_ll_leixing"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="类型"
            android:textSize="20dp"
            android:textColor="#6b6b6b"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/line_shu"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请选择您的电脑类型"
            android:layout_marginLeft="20dp"
            android:textColorHint="#c9c9c9"
            android:id="@+id/diannao_tv_leixing"
            android:gravity="center_vertical"
            android:textSize="19sp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/fanhui"
            android:layout_marginLeft="20dp"
            android:paddingRight="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:id="@+id/diannao_ll_xinghao"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="型号"
            android:textSize="20dp"
            android:textColor="#6b6b6b"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/line_shu"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/diannao_tv_xinghao"
            android:hint="请选择您的电脑型号"
            android:layout_marginLeft="20dp"
            android:textColorHint="#c9c9c9"
            android:gravity="center_vertical"
            android:textSize="19sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/fanhui"
            android:layout_marginLeft="20dp"
            android:paddingRight="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:id="@+id/diannao_ll_guzhang"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="故障"
            android:textSize="20dp"
            android:textColor="#6b6b6b"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/line_shu"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请选择您的电脑故障"
            android:layout_marginLeft="20dp"
            android:textColorHint="#c9c9c9"
            android:id="@+id/diannao_tv_guzhang"
            android:gravity="center_vertical"
            android:textSize="19sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/fanhui"
            android:paddingRight="20dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/itemline"
        android:scaleType="fitXY"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@null"
        android:id="@+id/computer_et_xiangqing"
        android:hint="电脑故障详情"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="#c9c9c9"
        android:textSize="19sp"
        android:textColorHint="#c9c9c9"
        android:layout_marginTop="2dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="5dp"
        >
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="#f2f2f2"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            >
            <ImageView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:id="@+id/computer_img"
                android:layout_gravity="center"
                android:src="@mipmap/yuan_bai"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/computer_jiahao"
                android:layout_gravity="center"
                android:src="@mipmap/jia"
                />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/button"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:text="确认"
        android:id="@+id/computer_ok"
        android:textColor="#fff"
        android:textSize="20dp" />
</LinearLayout>