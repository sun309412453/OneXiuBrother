<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:MyTitleBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <com.zykj.onexiubrother.widget.MyTitleBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:background="#ffffff"
        android:id="@+id/title"
        MyTitleBar:LiftBackground="@mipmap/retreat"
        MyTitleBar:TitleText="忘记密码"
        MyTitleBar:TitleTextColor="#00cccc"
        MyTitleBar:TitleTextSize="10sp"></com.zykj.onexiubrother.widget.MyTitleBar>

    <include
        layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:hint="请输入手机号"
        android:paddingLeft="20dp"
        android:textColorHint="#c9c9c9"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/itemline"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="#fff"
            android:hint="请输入验证码"
            android:paddingLeft="20dp"
            android:textColorHint="#c9c9c9"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/zhifuanniuhuang"
            android:layout_marginRight="20dp"
            android:text="获取验证码"
            android:textColor="#fff"
            android:gravity="center"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="19sp"
        android:background="@mipmap/renzhenganniu"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
</LinearLayout>